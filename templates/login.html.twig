{% extends 'layout.html.twig' %}

{% block content %}
    {% if error %}
        <div class="alert alert-danger alert-dismissible fade show container col-10 col-lg-5 text-left" role="alert">
            <p>{{error}}</p>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endif %}
    <div class="col-lg-6 pl-sm-5 col-md-10 mx-auto">
        <h2 class="text-center">Connexion</h2>
        <form name="connexion" id="contactForm" method='post' action="">
            <div class="control-group">
                <div class="form-group floating-label-form-group controls">
                    <label>Mail</label>
                    <input type="email" class="form-control" {% if mail %} value='{{mail}}' {% endif %} name='mail' placeholder="Mail" id="mail" required data-validation-required-message="veuillez entrer un mail">
                    <p class="help-block text-danger"></p>
                </div>
            </div>
            <div class="control-group">
                <div class="form-group floating-label-form-group controls">
                    <label>Mot de passe</label>
                    <input type="password" class="form-control" name='pass' {% if pass %} value='{{pass}}' {% endif %} placeholder="Mot de passe" id="pass" required data-validation-required-message="Veuillez indiquer un mot de passe">
                    <p class="help-block text-danger"></p>
                </div>
            </div>
            <div class="form-check mt-4">
                <input type="checkbox" {{checked}} class="form-check-input mt-2"  name='cookie'  id="cookie" >
                <label for='cookie'  class="ml-2 form-check-label">Rester connecter</label>
                <p class="help-block text-danger"></p>
            </div>
            <div class="form-group col-5 mt-4 text-center col-md-12 mx-auto" >
                <button type="submit" name='submitConnect' class="btn btn-primary" id="sendMessageButton">Envoyer</button>
            </div>
        </form>
    </div>


{% endblock %}